{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "OPENAI_API_KEY",
        "POLY_LOG_LEVEL"
    ],
    "properties": {
        "OPENAI_API_KEY": {
            "type": "string",
            "description": "API Key for OpenAI Services",
            "pattern": "^sk-[a-zA-Z0-9]+$"
        },
        "POLY_LOG_LEVEL": {
            "type": "string",
            "enum": [
                "DEBUG",
                "INFO",
                "WARN",
                "ERROR"
            ],
            "default": "INFO"
        },
        "DB_CONNECTION_STRING": {
            "type": "string",
            "format": "uri"
        }
    }
}