{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "API Registry Schema",
    "type": "object",
    "required": [
        "version",
        "apis"
    ],
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "apis": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "base_url",
                    "auth_type",
                    "spec_path",
                    "env_keys"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "pattern": "^[a-z0-9-]+$"
                    },
                    "name": {
                        "type": "string"
                    },
                    "base_url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "auth_type": {
                        "type": "string",
                        "enum": [
                            "apiKey",
                            "bearer",
                            "oauth",
                            "hmac",
                            "none",
                            "token"
                        ]
                    },
                    "spec_path": {
                        "type": "string",
                        "pattern": "^\\./specs/.*"
                    },
                    "env_keys": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "pattern": "^[A-Z0-9_]+$"
                        }
                    },
                    "rate_limit": {
                        "type": "object",
                        "required": [
                            "requests",
                            "period"
                        ],
                        "properties": {
                            "requests": {
                                "type": "integer"
                            },
                            "period": {
                                "type": "string"
                            }
                        }
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "notes": {
                        "type": "string"
                    },
                    "owner": {
                        "type": "string"
                    }
                }
            }
        }
    }
}