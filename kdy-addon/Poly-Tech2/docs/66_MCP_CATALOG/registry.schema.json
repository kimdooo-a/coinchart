{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MCP Registry Schema",
    "type": "object",
    "required": [
        "version",
        "servers"
    ],
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "servers": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name",
                    "description",
                    "definition_path"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "definition_path": {
                        "type": "string",
                        "pattern": "^./servers/.*.yaml$"
                    },
                    "env_keys": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}